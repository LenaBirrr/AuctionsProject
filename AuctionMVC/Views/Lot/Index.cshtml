@model IEnumerable<Business.Interop.Data.LotDto>

@{
    ViewData["Title"] = "Лоты";
}

<div class="container" style="border-radius: 5px;">
    <div class="row" style="background-color:aquamarine; border-radius:3px;">
        <div class="col-1">Id</div>
        <div class="col-3">Название</div>
        <div class="col-3">Тема аукциона</div>
        <div class="col-1">Id покупателя</div>
        <div class="col-1">Id продавца</div>
        <div class="col-1"><a asp-controller="Lot" asp-action="Create">Добавить</a></div>

    </div>
</div>
<br />
@foreach (var item in Model)
{
    <div class="container" style="border-radius: 5px;">
        <div class="row" style="background-color:#effdff; border-radius:3px;">
            <div class="col-1">@item.Id</div>
            <div class="col-3">@item.AuctionItem.Name</div>
            <div class="col-3">@item.Auction.Topic</div>
            <div class="col-1">@item.Byuer.Id</div>
            <div class="col-1">@item.Seller.Id</div>
            <div class="col-1"><a asp-controller="Lot" asp-action="Delete" asp-route-id="@item.Id">Удалить</a></div>
            <div class="col-1"><a asp-controller="Lot" asp-action="Edit" asp-route-id="@item.Id">Редактировать</a></div>

        </div>
    </div>
    <br />
}