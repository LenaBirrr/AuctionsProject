@model IEnumerable<Business.Interop.Data.UserDto>

@{
    ViewData["Title"] = "Пользователи";
}

<div class="container" style="border-radius: 5px;">
    <div class="row" style="background-color:aquamarine; border-radius:3px;">
        <div class="col-1">Id</div>
        <div class="col-5">Полное имя</div>
        <div class="col-3"><a asp-controller="User" asp-action="Create">Добавить</a></div>
    </div>
    <br />
</div>@foreach (var item in Model)
{
    <div class="container" style="border-radius: 5px;">
        <div class="row" style="background-color:#effdff; border-radius:3px;">
            <div class="col-1">@item.Id</div>
            <div class="col-5">@item.FullName</div>
            <div class="col-3"><a asp-controller="User" asp-action="Delete" asp-route-id="@item.Id">Удалить</a></div>
            <div class="col-3"><a asp-controller="User" asp-action="Edit" asp-route-id="@item.Id">Редактировать</a></div>

        </div>
    </div>
    <br />
}