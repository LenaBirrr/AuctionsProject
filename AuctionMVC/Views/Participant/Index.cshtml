@model IEnumerable<Business.Interop.Data.ParticipantDto>

@{
    ViewData["Title"] = "Участники";
}

<div class="container" style="border-radius: 5px;">
    <div class="row" style="background-color:aquamarine; border-radius:3px;">
        <div class="col-1">Id</div>
        <div class="col-1">Id аукциона</div>
        <div class="col-4">Полное имя</div>
        <div class="col-3"><a asp-controller="Participant" asp-action="Create">Добавить</a></div>

    </div>
</div>
<br />
@foreach (var item in Model)
{
    <div class="container" style="border-radius: 5px;">
        <div class="row" style="background-color:#effdff; border-radius:3px;">
            <div class="col-1">@item.Id</div>
            <div class="col-1">@item.Auction.Id</div>
            <div class="col-4">@item.User.FullName</div>
            <div class="col-3"><a asp-controller="Participant" asp-action="Delete" asp-route-id="@item.Id">Удалить</a></div>
            <div class="col-3"><a asp-controller="Participant" asp-action="Edit" asp-route-id="@item.Id">Редактировать</a></div>

        </div>
    </div>
    <br />
}