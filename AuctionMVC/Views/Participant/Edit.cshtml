@model Business.Interop.Data.ParticipantDto

@{
    ViewData["Title"] = "Редактирование участника";
}

<h2>Редактируем</h2>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" readonly="readonly" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AuctionId" class="control-label">Аукцион</label>
                <select asp-antiforgery="true" data-live-search="true" autocomplete="true" asp-for="AuctionId" class="form-control" asp-items="ViewBag.AuctionIds">
                    <option selected="selected" value=""></option>
                </select>
                <span asp-validation-for="AuctionId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="UserId" class="control-label">Пользователь</label>
                <select asp-antiforgery="true" data-live-search="true" autocomplete="true" asp-for="UserId" class="form-control" asp-items="ViewBag.UserIds">
                    <option selected="selected" value=""></option>
                </select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>



            <div class="form-group">
                <input style="background-color:chartreuse" type="submit" value="Обновить" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/AuctionList.js"></script>
    <script src="~/js/UserList.js"></script>

}